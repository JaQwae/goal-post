<body class="mypost">
        <div class="wrapper">

    <header class="hero">
        <h2>Your Posts</h2>
    </header>
<div class="card text-center single-post">
    {{#if posts.length}}
    <section class="flex-row justify-center">
        {{#each posts as |post|}}
        {{> singlemypost post}}
        {{/each}}
    </section>
    {{/if}}

</div>


<button type="submit" class="btn" id="create-btn"><a class="link" href="mypost/new">+ New Post</a></button>

</div>
</body>